# [NEW CHANNEL NAME] Automation Configuration
# Rename this file to config.yaml

# 1. Content Settings
content:
  niche: "history_facts"  # e.g., facts, news, motivation, horror
  language: "en"          # en, ar, es, etc.
  target_duration: 60     # seconds (for Shorts)
  
  # AI Provider (OpenAI / Anthropic)
  ai_provider: "anthropic"
  model: "claude-3-haiku-20240307"
  
  # Content Prompts
  system_prompt: |
    You are a professional content creator for a YouTube channel about {niche}.
    Create engaging, viral scripts that are under 1 minute long.
    Focus on a strong hook in the first 3 seconds.
    
  # Topics to rotate through
  topics:
    - "General"
    - "Top 10"
    - "Did you know?"

# 2. Visual Settings
visuals:
  source: "pexels"  # pexels, pixabay, dalle
  orientation: "portrait" # portrait (9:16), landscape (16:9)
  
  # Safety & Relevance
  strict_mode: true
  safety_filter: "no people, blur, abstract" # appended to every search
  
  # Thematic Mapping (Map concepts to safe visuals)
  # Example: "fear" -> "dark storm", "joy" -> "sunflower field"
  thematic_mapping:
    default_concept: "visual_term"

# 3. Audio Settings
audio:
  provider: "elevenlabs" # elevenlabs, openai, google
  voice_id: "REPLACE_WITH_VOICE_ID"
  background_music_enabled: false
  background_music_volume: 0.1

# 4. Upload Settings
youtube:
  upload_enabled: true
  privacy_status: "private" # public, private, unlisted
  title_format: "{topic} - #shorts"
  tags: ["shorts", "viral", "fyp"]

# 5. Paths
paths:
  output_dir: "assets/output"
  temp_dir: "assets/temp"
  media_dir: "assets/media"
